[Unit]
Description=Chickadee's distributed currency daemon
After=network.target

[Service]
User=chickadee
Group=chickadee

Type=forking
PIDFile=/var/lib/chickadeed/chickadeed.pid
ExecStart=/usr/bin/chickadeed -daemon -pid=/var/lib/chickadeed/chickadeed.pid \
-conf=/etc/chickadee/chickadee.conf -datadir=/var/lib/chickadeed -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
